@{
    ViewData["Title"] = "Usuario";
}


<!doctype html>
<html lang="es">
<head>
    <title>Reserva Citas</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


</head>
<body>

    <section class="banner mt-3" style="min-height: 100vh;
    background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5));
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #ffff;
    padding-bottom: 20px;">
        <h2>RESERVA TU HORA</h2>
        <div class="card-contenedor mt-5" style="display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;">
            <div class="card-img mt-3">
            </div>
            <div class="card-contenido mt-3">
                <h3>Reserva</h3>
                <form id="reservar-hora">
                    <div class="form-row mt-3">
                        <!-- <select name="dias">
                            <option value="dia-seleccionar">Seleccionar dia</option>
                            <option value="domingo">Domingo</option>
                            <option value="lunes">Lunes</option>
                            <option value="martes">Martes</option>
                            <option value="miercoles">Miercoles</option>
                            <option value="jueves">Jueves</option>
                            <option value="viernes">Viernes</option>
                            <option value="sabado">Sábado</option>
                        </select> -->


                        <input type="date" id="fecha" name="fecha">


                        <!-- <select name="horario">
                             <option value="hora-seleccionar">Seleccionar hora</option>
                             <option value="10">10:00</option>
                             <option value="12">12:00</option>
                             <option value="14">14:00</option>
                             <option value="16">16:00</option>
                             <option value="18">18:00</option>
                             <option value="20">20:00</option>
                             <option value="22">22:00</option>
                         </select>  -->

                        <input type="time" id="hora" name="hora"
                               min="10:00" max="24:00" required>




                    </div>

                    <div class="form-row mt-3">
                        <input type="text" placeholder="Nombre completo" id="nombre" name="nombre">
                        <input type="text" placeholder="Telefono" id="telefono" name="telefono">

                    </div>


                    <div class="form-row mt-3">

                        <div class="select mt-3">
                            <select name="servicio" id="servicio">
                                <option selected disabled>Perro</option>
                                <option value="perro 1">Perro 1</option>
                                <option value="perro 2">Perro 2</option>
                                <option value="perro 3">Perro 3</option>
                                <option value="perro 4">Perro 4</option>
                                <option value="perro 5">Perro 5</option>
                            </select>
                        </div>

                        <input type="submit" value="RESERVAR HORA">


                    </div>

                </form>

            </div>



        </div>

        <div class="reserva mt-3" id="administraReservas">

            <h2 id="administra">Administrar reservas</h2>
            <ul id="reservas" class="lista-citas"></ul>




        </div>

    </section>


    <script src="~/js/app.js" type="module"></script>



</body>

</html>